@model LayoutandPartialViews.Models.Product

<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">Price: $@Model.Price</p>
        <a href="@Url.Action("Details", "Product", new { id = Model.Id })" class="btn btn-primary">View Details</a>
    </div>
</div>
